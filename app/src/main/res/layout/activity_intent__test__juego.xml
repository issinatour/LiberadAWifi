<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="natour.issam.proyecto.es.proyecto_qiz.Intent_Test_Juego">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoPregunta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/botonpreguntaA"
        android:onClick="ComprobarA"
        android:layout_above="@+id/botonpreguntaC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/botonpreguntaB"
        android:layout_alignTop="@+id/botonpreguntaA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="ComprobarB" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/botonpreguntaC"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:onClick="ComprobarC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/botonpreguntaD"
        android:layout_alignTop="@+id/botonpreguntaC"
        android:layout_alignLeft="@+id/botonpreguntaB"
        android:layout_alignStart="@+id/botonpreguntaB"
        android:onClick="ComprobarD" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagenpregunta"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/textoPregunta"
        android:layout_alignLeft="@+id/textoPregunta"
        android:layout_alignStart="@+id/textoPregunta" />



    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar"
        android:max="100"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+tiempo"
        android:id="@+id/buttonsumartiempo"
        android:layout_marginTop="92dp"
        android:layout_below="@+id/imagenpregunta"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consejo"
        android:id="@+id/botonconejo"
        android:layout_below="@+id/buttonsumartiempo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/buttonsumartiempo"
        android:layout_alignStart="@+id/buttonsumartiempo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textoconsejo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:id="@+id/botonfiftyfifty"
        android:layout_below="@+id/botonconejo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
